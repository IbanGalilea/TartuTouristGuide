<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:TartuTouristGuide.ViewModels"
             x:Class="TartuTouristGuide.Views.CategoryListPage"
             x:DataType="vm:CategoryListViewModel"
             Title="{Binding Category}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="ðŸ”„ Reset" 
                     Command="{Binding ResetCategoryCommand}"
                     Order="Primary" 
                     Priority="0" />
    </ContentPage.ToolbarItems>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Header -->
            <VerticalStackLayout Spacing="10">
                <Label Text="{Binding Category}"
                       FontSize="32"
                       FontAttributes="Bold"
                       TextColor="#1e3a8a" />
                <Label Text="{Binding CountText}"
                       FontSize="16"
                       TextColor="#6b7280" />
            </VerticalStackLayout>

            <!-- Places List avec virtualisation -->
            <CollectionView ItemsSource="{Binding PlaceItems}"
                            RemainingItemsThreshold="3"
                            ItemSizingStrategy="MeasureFirstItem"
                            HeightRequest="600">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="vm:PlaceItem">
                        <Border StrokeShape="RoundRectangle 10" 
                                StrokeThickness="0" 
                                Margin="0,0,0,15">
                            <Border.Shadow>
                                <Shadow Brush="Black" Opacity="0.1" Offset="0,2" Radius="4" />
                            </Border.Shadow>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer 
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type vm:CategoryListViewModel}}, Path=NavigateToPlaceCommand}"
                                    CommandParameter="{Binding Place.Id}" />
                            </Border.GestureRecognizers>
                            <Grid>
                                <Image Source="{Binding Place.Image}" 
                                       Aspect="AspectFill"
                                       ZIndex="2"
                                       Opacity="0.6"
                                       HeightRequest="200" />
                                <BoxView Color="Black" Opacity="0.3" ZIndex="1" />

                                <Border BackgroundColor="#22c55e"
                                        StrokeShape="RoundRectangle 8"
                                        Padding="10,5"
                                        Margin="10"
                                        HorizontalOptions="End"
                                        VerticalOptions="Start"
                                        ZIndex="3"
                                        IsVisible="{Binding IsVisited}">
                                    <Label Text="âœ“ Visited"
                                           TextColor="White"
                                           FontSize="12"
                                           FontAttributes="Bold" />
                                </Border>

                                <VerticalStackLayout Padding="15" VerticalOptions="End" ZIndex="4">
                                    <Label Text="{Binding Place.Name}" 
                                           FontSize="22" 
                                           FontAttributes="Bold"
                                           TextColor="White"/>
                                    <Label Text="{Binding Place.ShortDescription}" 
                                           FontSize="14"
                                           TextColor="White"
                                           Opacity="0.9" />
                                </VerticalStackLayout>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>